(defun start-apps ()
  (mapc (lambda (x)
          (sleep .1)
          (log:info "killing ~A" x)
          (run-shell-command (format nil "pkill ~A" x))
          (sleep .4)
          (log:info "starting ~A" x)
          (run-shell-command x))
        *stumptray-apps*))

